---
// 联系我们组件
---

<section id="contact" class="contact-section py-5xl">
  <div class="container">
    
    <!-- 标题区域 -->
    <div class="section-header text-center mb-5xl">
      <div class="section-number">
        <span class="accent-number">04</span>
        <div class="english-text small-element opacity-70">Contact</div>
      </div>
      <h2 class="section-title chinese-text">
        开启合作
        <br />
        <span class="english-text font-light opacity-80">Start Our Journey Together</span>
      </h2>
      <p class="section-description chinese-text text-lg opacity-90 mt-xl">
        让我们以「和光同尘」的心境，共同探索无限可能
      </p>
    </div>
    
    <div class="contact-content grid grid-2 gap-5xl">
      
      <!-- 联系信息 -->
      <div class="contact-info">
        <div class="info-card card">
          <h3 class="chinese-text font-bold text-2xl mb-xl">联系方式</h3>
          
          <div class="contact-methods">
            <!-- 邮箱 -->
            <div class="contact-method mb-xl">
              <div class="method-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M4 4H20C21.1 4 22 4.9 22 6V18C22 19.1 21.1 20 20 20H4C2.9 20 2 19.1 2 18V6C2 4.9 2.9 4 4 4Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <polyline points="22,6 12,13 2,6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
              <div class="method-content">
                <h4 class="chinese-text font-semibold">邮箱咨询</h4>
                <p class="english-text small-element opacity-70 mb-sm">Email Consultation</p>
                <a href="mailto:info@hpfkz.com" class="contact-link">info@hpfkz.com</a>
                <p class="chinese-text small-element opacity-70">我们将在24小时内回复您的邮件</p>
              </div>
            </div>
            
            <!-- 电话 -->
            <div class="contact-method mb-xl">
              <div class="method-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M22 16.92V19.92C22 20.42 21.58 20.85 21.08 20.85C9.61 20.85 0.38 11.62 0.38 0.15C0.38 -0.35 0.81 -0.78 1.31 -0.78H4.31C4.81 -0.78 5.24 -0.35 5.24 0.15V3.15L3.16 5.23C4.91 8.77 8.23 12.09 11.77 13.84L13.85 11.76H16.85C17.35 11.76 17.78 12.19 17.78 12.69V15.69" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
              <div class="method-content">
                <h4 class="chinese-text font-semibold">电话联系</h4>
                <p class="english-text small-element opacity-70 mb-sm">Phone Contact</p>
                <a href="tel:+8618888888888" class="contact-link">+86 188 8888 8888</a>
                <p class="chinese-text small-element opacity-70">工作时间：周一至周五 9:00-18:00</p>
              </div>
            </div>
            
            <!-- 微信 -->
            <div class="contact-method">
              <div class="method-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M21 11.5C21.3 11.5 21.6 11.4 21.9 11.3C22.1 11.2 22.4 11.1 22.6 11C23.4 10.6 24 9.8 24 9C24 7.9 23.1 7 22 7C20.9 7 20 7.9 20 9C20 9.3 20.1 9.5 20.2 9.8L18.2 10.8C17.8 10.3 17.2 10 16.5 10C15.7 10 15 10.4 14.7 11C14.3 11.7 14.5 12.6 15.1 13.1L16.9 14.9C17.2 15.2 17.6 15.3 18 15.3C18.4 15.3 18.8 15.2 19.1 14.9L21 13" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <circle cx="9" cy="12" r="1" fill="currentColor"/>
                  <circle cx="15" cy="12" r="1" fill="currentColor"/>
                  <path d="M8 21L16 21C18.2 21 20 19.2 20 17L20 7C20 4.8 18.2 3 16 3L8 3C5.8 3 4 4.8 4 7L4 17C4 19.2 5.8 21 8 21Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
              <div class="method-content">
                <h4 class="chinese-text font-semibold">微信咨询</h4>
                <p class="english-text small-element opacity-70 mb-sm">WeChat Consultation</p>
                <span class="contact-text">HPFKZ2024</span>
                <p class="chinese-text small-element opacity-70">扫码添加微信，获取专业咨询</p>
              </div>
            </div>
          </div>
          
          <!-- 办公地址 -->
          <div class="office-info mt-2xl pt-xl">
            <h4 class="chinese-text font-semibold mb-lg">办公地址</h4>
            <div class="address-info">
              <p class="chinese-text mb-sm">中国 · 深圳</p>
              <p class="chinese-text opacity-80 mb-sm">南山区科技园南区深圳湾科技生态园</p>
              <p class="english-text small-element opacity-70">Shenzhen Bay Eco-Tech Park, Nanshan District, Shenzhen, China</p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- 联系表单 -->
      <div class="contact-form">
        <div class="form-card card">
          <h3 class="chinese-text font-bold text-2xl mb-xl">留言咨询</h3>
          <p class="chinese-text opacity-80 mb-2xl">
            请填写您的联系信息和咨询内容，我们将尽快与您取得联系
          </p>
          
          <form class="consultation-form" id="contactForm">
            <div class="form-row grid grid-2 gap-lg mb-lg">
              <div class="form-group">
                <label for="name" class="form-label chinese-text">姓名 *</label>
                <input type="text" id="name" name="name" class="form-input" placeholder="请输入您的姓名" required>
              </div>
              <div class="form-group">
                <label for="company" class="form-label chinese-text">公司名称</label>
                <input type="text" id="company" name="company" class="form-input" placeholder="请输入公司名称">
              </div>
            </div>
            
            <div class="form-row grid grid-2 gap-lg mb-lg">
              <div class="form-group">
                <label for="email" class="form-label chinese-text">邮箱 *</label>
                <input type="email" id="email" name="email" class="form-input" placeholder="请输入邮箱地址" required>
              </div>
              <div class="form-group">
                <label for="phone" class="form-label chinese-text">联系电话</label>
                <input type="tel" id="phone" name="phone" class="form-input" placeholder="请输入联系电话">
              </div>
            </div>
            
            <div class="form-group mb-lg">
              <label for="service" class="form-label chinese-text">咨询服务</label>
              <select id="service" name="service" class="form-select">
                <option value="">请选择咨询的服务类型</option>
                <option value="consulting">战略咨询</option>
                <option value="innovation">技术创新</option>
                <option value="culture">文化融合</option>
                <option value="digital">数字化转型</option>
                <option value="other">其他服务</option>
              </select>
            </div>
            
            <div class="form-group mb-2xl">
              <label for="message" class="form-label chinese-text">咨询内容 *</label>
              <textarea id="message" name="message" class="form-textarea" rows="6" placeholder="请详细描述您的需求和咨询内容..." required></textarea>
            </div>
            
            <button type="submit" class="btn btn-primary chinese-text form-submit">
              提交咨询
              <span class="english-text small-element">Submit</span>
            </button>
            
            <p class="form-note chinese-text small-element opacity-70 mt-lg text-center">
              提交后我们将在24小时内回复您的咨询，感谢您的信任
            </p>
          </form>
        </div>
      </div>
      
    </div>
    
  </div>
</section>

<style>
  .contact-section {
    background: 
      radial-gradient(circle at 70% 30%, rgba(87, 81, 213, 0.04) 0%, transparent 50%),
      linear-gradient(135deg, rgba(22, 22, 21, 0.01) 0%, rgba(87, 81, 213, 0.02) 100%);
  }
  
  .section-header {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .section-number {
    margin-bottom: var(--space-8);
  }
  
  .section-number .accent-number {
    display: block;
    margin-bottom: var(--space-3);
  }
  
  .section-description {
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.8;
  }
  
  /* 联系信息样式 */
  .info-card,
  .form-card {
    height: fit-content;
  }
  
  .contact-methods {
    margin-bottom: var(--space-8);
  }
  
  .contact-method {
    display: flex;
    align-items: flex-start;
    gap: var(--space-6);
    padding: var(--space-6) 0;
    border-bottom: 1px solid rgba(22, 22, 21, 0.05);
  }
  
  .contact-method:last-child {
    border-bottom: none;
  }
  
  .method-icon {
    width: 48px;
    height: 48px;
    background: rgba(87, 81, 213, 0.1);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-accent);
    flex-shrink: 0;
  }
  
  .method-content {
    flex: 1;
  }
  
  .method-content h4 {
    margin-bottom: var(--space-2);
    color: var(--color-primary);
  }
  
  .contact-link {
    color: var(--color-accent);
    text-decoration: none;
    font-weight: 600;
    font-size: var(--text-lg);
    display: block;
    margin: var(--space-3) 0;
    transition: opacity 0.3s ease;
  }
  
  .contact-link:hover {
    opacity: 0.8;
  }
  
  .contact-text {
    color: var(--color-primary);
    font-weight: 600;
    font-size: var(--text-lg);
    display: block;
    margin: var(--space-3) 0;
  }
  
  /* 办公地址样式 */
  .office-info {
    border-top: 1px solid rgba(22, 22, 21, 0.1);
  }
  
  .address-info p {
    margin-bottom: var(--space-3);
    line-height: 1.6;
  }
  
  /* 表单样式 */
  .consultation-form {
    width: 100%;
  }
  
  .form-group {
    margin-bottom: var(--space-6);
  }
  
  .form-label {
    display: block;
    margin-bottom: var(--space-3);
    font-weight: 600;
    color: var(--color-primary);
  }
  
  .form-input,
  .form-select,
  .form-textarea {
    width: 100%;
    padding: var(--space-4) var(--space-6);
    border: 2px solid rgba(22, 22, 21, 0.1);
    border-radius: 12px;
    font-size: var(--text-base);
    font-family: inherit;
    background: var(--bg-primary);
    color: var(--color-primary);
    transition: all 0.3s ease;
  }
  
  .form-input:focus,
  .form-select:focus,
  .form-textarea:focus {
    outline: none;
    border-color: var(--color-accent);
    box-shadow: 0 0 0 3px rgba(87, 81, 213, 0.1);
  }
  
  .form-input::placeholder,
  .form-textarea::placeholder {
    color: var(--color-secondary);
    opacity: 0.7;
  }
  
  .form-select {
    cursor: pointer;
  }
  
  .form-textarea {
    resize: vertical;
    min-height: 120px;
    line-height: 1.6;
  }
  
  .form-submit {
    width: 100%;
    justify-content: center;
    padding: var(--space-6) var(--space-12);
    font-size: var(--text-lg);
    font-weight: 600;
  }
  
  .form-note {
    text-align: center;
    line-height: 1.5;
  }
  
  /* 响应式设计 */
  @media (max-width: 768px) {
    .contact-content {
      grid-template-columns: 1fr;
      gap: var(--space-16);
    }
    
    .form-row {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }
    
    .contact-method {
      flex-direction: column;
      text-align: center;
      gap: var(--space-4);
    }
    
    .method-icon {
      align-self: center;
    }
  }
  
  @media (max-width: 480px) {
    .form-input,
    .form-select,
    .form-textarea {
      padding: var(--space-3) var(--space-4);
    }
    
    .form-submit {
      padding: var(--space-4) var(--space-8);
      font-size: var(--text-base);
    }
  }
</style>

<script>
  // 表单提交处理
  document.addEventListener('DOMContentLoaded', () => {
    const contactForm = document.getElementById('contactForm');
    
    if (contactForm) {
      contactForm.addEventListener('submit', (e) => {
        e.preventDefault();
        
        // 获取表单数据
        const formData = new FormData(contactForm);
        const data = Object.fromEntries(formData.entries());
        
        // 简单的客户端验证
        if (!data.name.trim() || !data.email.trim() || !data.message.trim()) {
          alert('请填写必填项（姓名、邮箱、咨询内容）');
          return;
        }
        
        // 邮箱格式验证
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailRegex.test(data.email)) {
          alert('请输入正确的邮箱格式');
          return;
        }
        
        // 模拟提交成功
        const submitButton = contactForm.querySelector('.form-submit');
        const originalText = submitButton.innerHTML;
        
        submitButton.innerHTML = '提交中...';
        submitButton.disabled = true;
        
        setTimeout(() => {
          alert('感谢您的咨询！我们已收到您的信息，将在24小时内回复您。');
          contactForm.reset();
          submitButton.innerHTML = originalText;
          submitButton.disabled = false;
        }, 1500);
        
        // 在实际项目中，这里应该发送数据到服务器
        console.log('Contact form data:', data);
      });
    }
  });
</script>