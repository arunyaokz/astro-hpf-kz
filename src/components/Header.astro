---
import { COMPANY_NAME } from '../consts';
import LanguageSelector from './LanguageSelector.astro';
---

<header class="apple-header">
  <nav class="nav-container">
    
    <!-- Brand Logo -->
    <div class="brand">
      <a href="/" class="brand-link">
        <div class="logo">
          <span class="logo-text">{COMPANY_NAME}</span>
        </div>
      </a>
    </div>
    
    <!-- Main Navigation -->
    <div class="nav-menu" id="navMenu">
      <a href="#products" class="nav-link" data-i18n="products">
        产品
      </a>
      <a href="#solutions" class="nav-link" data-i18n="solutions">
        解决方案
      </a>
      <a href="#platform" class="nav-link" data-i18n="platform">
        平台
      </a>
      <a href="#about" class="nav-link" data-i18n="about">
        关于
      </a>
    </div>
    
    <!-- Right Actions -->
    <div class="nav-actions">
      <LanguageSelector />
      <a href="#contact" class="nav-cta" data-i18n="getGreenChannel">
        获取绿通名额
      </a>
    </div>
    
    <!-- Mobile Menu Button -->
    <button class="mobile-menu-btn" id="mobileMenuBtn" aria-label="Menu" aria-controls="mobileMenu" aria-expanded="false">
      <span class="menu-line"></span>
      <span class="menu-line"></span>
    </button>
    
  </nav>
  
  <!-- Mobile Menu Overlay -->
  <div class="mobile-menu" id="mobileMenu">
    <div class="mobile-menu-content">
      <div class="mobile-nav-links">
        <a href="#products" class="mobile-nav-link" data-i18n="products">
          产品
        </a>
        <a href="#solutions" class="mobile-nav-link" data-i18n="solutions">
          解决方案
        </a>
        <a href="#platform" class="mobile-nav-link" data-i18n="platform">
          平台
        </a>
        <a href="#about" class="mobile-nav-link" data-i18n="about">
          关于
        </a>
      </div>
      
      <div class="mobile-actions">
        <a href="#contact" class="mobile-cta" data-i18n="getGreenChannel">
          获取绿通名额
        </a>
      </div>
    </div>
  </div>
</header>

<style>
  .apple-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }
  
  .apple-header.scrolled {
    background: rgba(255, 255, 255, 0.95);
    border-bottom-color: rgba(0, 0, 0, 0.1);
  }
  
  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 var(--space-10);
    height: var(--space-16);
  }
  
  /* Brand */
  .brand-link {
    text-decoration: none;
    color: inherit;
    transition: opacity 0.2s ease;
  }
  
  .brand-link:hover {
    opacity: 0.8;
  }
  
  .logo-text {
    font-size: var(--text-2xl);
    font-weight: 700;
    color: var(--color-primary);
    letter-spacing: -0.01em;
  }
  
  /* Main Navigation */
  .nav-menu {
    display: flex;
    align-items: center;
    gap: var(--space-10);
  }
  
  .nav-link {
    font-size: var(--text-lg);
    font-weight: 500;
    color: var(--color-primary);
    text-decoration: none;
    padding: var(--space-2) 0;
    position: relative;
    transition: all 0.2s ease;
  }
  
  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--color-accent);
    transform: scaleX(0);
    transform-origin: center;
    transition: transform 0.2s ease;
  }
  
  .nav-link:hover::after {
    transform: scaleX(1);
  }
  
  .nav-link:hover {
    color: var(--color-accent);
  }
  
  /* Right Actions */
  .nav-actions {
    display: flex;
    align-items: center;
    gap: var(--space-5);
  }
  
  .nav-cta {
    background: var(--color-primary);
    color: var(--color-background);
    padding: var(--space-3) var(--space-5);
    border-radius: var(--space-5);
    font-size: var(--text-base);
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
  }
  
  .nav-cta:hover {
    background: var(--color-accent);
    transform: translateY(-1px);
  }
  
  /* Mobile Menu Button */
  .mobile-menu-btn {
    display: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: var(--space-8);
    height: var(--space-8);
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    gap: 6px;
  }
  
  .menu-line {
    width: var(--text-xl);
    height: 2px;
    background: var(--color-primary);
    border-radius: 1px;
    transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    transform-origin: center;
  }
  
  .mobile-menu-btn.active .menu-line:nth-child(1) {
    transform: rotate(45deg) translate(3px, 3px);
  }
  
  .mobile-menu-btn.active .menu-line:nth-child(2) {
    transform: rotate(-45deg) translate(3px, -3px);
  }
  
  /* Mobile Menu */
  .mobile-menu {
    position: fixed;
    top: var(--space-16);
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(20px);
    transform: translateY(-100%);
    opacity: 0;
    visibility: hidden;
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }
  
  .mobile-menu.active {
    transform: translateY(0);
    opacity: 1;
    visibility: visible;
  }
  
  .mobile-menu-content {
    padding: var(--space-16) var(--space-10);
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: var(--space-16);
  }
  
  .mobile-nav-links {
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
    text-align: center;
  }
  
  .mobile-nav-link {
    font-size: var(--text-5xl);
    font-weight: 600;
    color: var(--color-primary);
    text-decoration: none;
    transition: all 0.2s ease;
  }
  
  .mobile-nav-link:hover {
    color: var(--color-accent);
    transform: scale(1.05);
  }
  
  .mobile-actions {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    width: 100%;
    max-width: 280px;
  }
  
  .mobile-cta {
    background: var(--color-primary);
    color: var(--color-background);
    padding: var(--space-4) var(--space-8);
    border-radius: 25px;
    font-size: var(--text-xl);
    font-weight: 600;
    text-decoration: none;
    text-align: center;
    transition: all 0.2s ease;
  }
  
  .mobile-cta:hover {
    background: var(--color-accent);
  }
  
  /* Responsive Design */
  @media (max-width: 1024px) {
    .nav-menu {
      gap: var(--space-8);
    }
    
    .nav-actions {
      gap: var(--space-4);
    }
  }
  
  @media (max-width: 768px) {
    .nav-container {
      padding: 0 var(--space-5);
      height: 56px;
    }
    
    .nav-menu,
    .nav-actions .nav-cta {
      display: none;
    }
    
    .mobile-menu-btn {
      display: flex;
    }
    
    .mobile-menu {
      top: 56px;
    }
    
    .mobile-menu-content {
      padding: var(--space-10) var(--space-5);
      gap: var(--space-10);
    }
    
    .mobile-nav-link {
      font-size: var(--text-3xl);
    }
  }
  
  @media (max-width: 480px) {
    .logo-text {
      font-size: var(--text-xl);
    }
    
    .mobile-nav-link {
      font-size: var(--text-2xl);
    }
  }
  
  /* Smooth scroll offset for fixed header */
  html {
    scroll-padding-top: var(--space-16);
  }
  
  @media (max-width: 768px) {
    html {
      scroll-padding-top: 56px;
    }
  }
</style>

